<Window x:Class="ChordListenerCS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChordListenerCS"
        mc:Ignorable="d"
        Title="Chord Listener 🎸" Height="600" Width="900"
        Background="#121212" Foreground="White"
        WindowStartupLocation="CenterScreen">
    
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#00E676"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="0.8"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#1E1E1E"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#333"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="CaretBrush" Value="White"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
            <TextBlock Text="🎸" FontSize="30" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <TextBlock Text="Chord Listener" FontSize="30" FontWeight="Bold" Foreground="#00E676"/>
            <TextBlock x:Name="StatusText" Text="Ready" Foreground="Gray" VerticalAlignment="Center" Margin="20,0,0,0" FontSize="14"/>
        </StackPanel>

        <!-- Controls -->
        <Grid Grid.Row="1" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBox x:Name="SearchInput" Grid.Column="0" FontSize="16" KeyDown="SearchInput_KeyDown"
                     Text="Enter: Artist - Song Title" ToolTip="Format: Artist - Song Name (e.g., Beatles - Let It Be)"/> 
            
            <Button x:Name="BtnSearch" Grid.Column="1" Content="🔍 Search" Click="BtnSearch_Click"/>
            <Button x:Name="BtnListen" Grid.Column="2" Content="🎙️ Auto-Listen" Click="BtnListen_Click" Background="#333" Foreground="White"/>
            
            <!-- Scroll Controls -->
            <StackPanel Grid.Column="3" Orientation="Horizontal" VerticalAlignment="Center" Margin="15,0,0,0">
                <CheckBox x:Name="ChkAutoScroll" Content="📜 Auto-Scroll" Foreground="White" VerticalAlignment="Center" 
                          Checked="ChkAutoScroll_CheckedChanged" Unchecked="ChkAutoScroll_CheckedChanged"/>
                
                <TextBlock Text="Speed" Foreground="Gray" VerticalAlignment="Center" Margin="10,0,5,0" FontSize="10"/>
                <Slider x:Name="SldScrollSpeed" Width="80" Minimum="1" Maximum="20" Value="5" 
                        VerticalAlignment="Center" ValueChanged="SldScrollSpeed_ValueChanged"
                        ToolTip="Adjust Scroll Speed" IsSnapToTickEnabled="True" TickFrequency="1"/>
            </StackPanel>
        </Grid>

        <!-- Song Info & Tabs -->
        <!-- Song Info & Tabs -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/> <!-- Info Left -->
                <ColumnDefinition Width="*"/>    <!-- Tab Center -->
                <ColumnDefinition Width="200"/>  <!-- Chords Right (New) -->
            </Grid.ColumnDefinitions>

            <!-- Metadata Panel -->
            <Border Grid.Column="0" Background="#1E1E1E" CornerRadius="8" Padding="15" Margin="0,0,15,0" Width="200" VerticalAlignment="Top">
                <StackPanel>
                    <Border Width="170" Height="170" Background="#111" CornerRadius="4" Margin="0,0,0,10">
                        <TextBlock Text="🎵" FontSize="50" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#333"/>
                    </Border>
                    <TextBlock x:Name="TxtSongTitle" Text="Song Title" FontSize="18" FontWeight="Bold" TextWrapping="Wrap"/>
                    <TextBlock x:Name="TxtArtist" Text="Artist Name" FontSize="14" Foreground="#AAA" TextWrapping="Wrap"/>
                </StackPanel>
            </Border>

            <!-- Tab Viewer -->
            <Border Grid.Column="1" Background="#1E1E1E" CornerRadius="8" Padding="10">
                <ScrollViewer x:Name="TabScrollViewer">
                    <TextBlock x:Name="TxtTabContent" 
                               FontFamily="Consolas, Courier New" 
                               FontSize="14" 
                               Text="Tabs will appear here..."
                               TextWrapping="Wrap"/>
                </ScrollViewer>
            </Border>
            
            <!-- Reference Chords Panel -->
            <Border Grid.Column="2" Background="#252525" CornerRadius="8" Padding="10" Margin="15,0,0,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="Chord Reference" FontWeight="Bold" FontSize="14" Foreground="#AAA" Margin="0,0,0,10"/>
                    <ScrollViewer Grid.Row="1">
                        <TextBlock x:Name="TxtChordsReference" 
                                   FontFamily="Consolas" 
                                   FontSize="13" 
                                   Foreground="#DDD"
                                   Text="Chords used will appear here."
                                   TextWrapping="Wrap"/>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>

        <!-- Footer -->
        <StatusBar Grid.Row="3" Background="Transparent" Foreground="#555" Margin="0,10,0,0">
            <StatusBarItem>
                <TextBlock Text="Powered by CifraClub &amp; NAudio"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
